<h1>Find/ Show tasks</h1>

<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<button class="btn btn-danger" id="button"><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></button>
<button class="btn btn-primary" id="button"><%= link_to "Edit", edit_task_path %></button>
<button class="btn btn-primary" id="button"><%= link_to "Back", tasks_path %></button>
